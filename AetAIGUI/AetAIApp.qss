QWidget {
    background-color: #1565c0;
    color: #f5e9c8;
    font-family: Arial;
    font-size: 16px;
}

QLabel {
    color: #f5e9c8;
    font-size: 20px;
}

QPushButton {
    background-color: #43a047;
    color: #fffde4;
    border: none;
    border-radius: 10px;
    padding: 16px 32px;
    font-weight: bold;
    transition: background-color 0.3s;
}

QPushButton:hover {
    background-color: #0288d1;
}

QPushButton:pressed {
    background-color: #01579b;
}